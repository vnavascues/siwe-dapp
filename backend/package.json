{
  "name": "backend",
  "description": "SIWE back-end app",
  "version": "0.1.0",
  "author": {
    "name": "Víctor Navascués",
    "url": "https://github.com/vnavascues"
  },
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "9.3.1",
    "@fastify/cors": "9.0.1",
    "@fastify/env": "4.3.0",
    "@fastify/session": "10.7.2",
    "@fastify/swagger": "8.14.0",
    "@fastify/swagger-ui": "3.0.0",
    "@fastify/type-provider-json-schema-to-ts": "3.0.0",
    "@joggr/fastify-prisma": "1.2.3",
    "@prisma/client": "5.12.1",
    "ajv": "8.12.0",
    "ajv-formats": "3.0.1",
    "axios": "1.6.8",
    "dotenv": "16.4.2",
    "ethers": "5.7.2",
    "fastify": "4.26.2",
    "fluent-json-schema": "4.2.1",
    "husky": "9.0.11",
    "json-schema-to-ts": "3.0.1",
    "pino": "8.20.0",
    "pino-pretty": "11.0.0",
    "prisma": "5.12.1",
    "prisma-extension-cuid2": "1.1.1",
    "siwe": "2.1.4",
    "tslib": "2.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.2",
    "@commitlint/config-conventional": "19.2.2",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "@typescript-eslint/parser": "7.7.0",
    "commitizen": "4.3.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "28.2.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.1.1",
    "jest": "29.7.0",
    "jest-each": "29.7.0",
    "lint-staged": "15.2.2",
    "nodemon": "^3.1.0",
    "pinst": "3.0.0",
    "prettier": "3.2.5",
    "shx": "0.3.4",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  },
  "main": "dist/server.js",
  "files": [
    "dist"
  ],
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "shx rm -rf dist; tsc -b --clean",
    "clean2": "shx rm -rf dist && rm -f tsconfig.tsbuildinfo",
    "commit": "git-cz",
    "lint": "yarn lint:ts && yarn prettier:check",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "postgres:up": "docker-compose up -d",
    "postgres:down": "docker-compose down",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "prettier:write": "prettier --write \"**/*.{js,json,md,ts}\"",
    "prettier:check": "prettier --check \"**/*.{js,json,md,ts}\"",
    "prisma:generate": "yarn prisma generate",
    "prisma:init": "yarn prisma init --datasource-provider postgresql",
    "prisma:migdevinit": "yarn prisma migrate dev --name init",
    "prisma:migdev": "yarn prisma migrate dev",
    "prisma:migprod": "yarn prisma migrate deploy",
    "prisma:migdiff": "yarn prisma migrate diff --from-schema-datamodel prisma/schema.prisma --to-migrations prisma/migrations --shadow-database-url $SHADOW_DATABASE_URL --script > ./prisma/migrations/down.sql",
    "server:dev": "ts-node ./src/index.ts",
    "server:dev:watch": "nodemon --watch './src/**/*.ts' --exec 'ts-node' ./src/index.ts",
    "server:dist": "node ./dist/src/index.js",
    "server:dist:migprod": "yarn prisma:migprod && node ./dist/src/index.js",
    "setup": "tsc -b",
    "start": "yarn server:dist"
  }
}
